{
  "expo": {
    "name": "Boat Rental App",
    "slug": "boat-rental-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.boatrentals.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs access to location when open to show nearby boats.",
        "NSLocationAlwaysUsageDescription": "This app needs access to location when in the background to show nearby boats."
      },
      "package": "com.boatrentals.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.boatrentals.app",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUseUsageDescription": "Allow $(PRODUCT_NAME) to use your location."
        }
      ]
    ],
    "scheme": "boat-rental-app"
  }
}