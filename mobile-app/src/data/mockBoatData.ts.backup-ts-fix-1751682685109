// Función para obtener boat por ID
export const getBoatById = (id: string) => {
  return mockBoats.find(boat => boat.id === id);
};

// Función para obtener boats destacados
export const getFeaturedBoats = () => {
  return mockBoats.filter(boat => boat.featured === true);
};

// Función para filtrar boats
export const filterBoats = (filters: any) => {
  let filteredBoats = [...mockBoats];

  if (filters.type) {
    filteredBoats = filteredBoats.filter(boat => boat.type === filters.type);
  }

  if (filters.state) {
    filteredBoats = filteredBoats.filter(boat => boat.location.state === filters.state);
  }

  if (filters.capacity) {
    filteredBoats = filteredBoats.filter(boat => boat.capacity >= filters.capacity);
  }

  if (filters.priceRange) {
    const [min, max] = filters.priceRange;
    filteredBoats = filteredBoats.filter(boat => 
      boat.pricePerHour >= min && boat.pricePerHour <= max
    );
  }

  if (filters.search) {
    const searchLower = filters.search.toLowerCase();
    filteredBoats = filteredBoats.filter(boat =>
      boat.name.toLowerCase().includes(searchLower) ||
      boat.description.toLowerCase().includes(searchLower) ||
      boat.location.marina.toLowerCase().includes(searchLower) ||
      boat.location.state.toLowerCase().includes(searchLower)
    );
  }

  return filteredBoats;
};