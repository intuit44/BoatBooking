// src/screens/payment/PaymentScreen.tsx
import React, { useState } from 'react';
import { View, StyleSheet, ScrollView, Alert } from 'react-native';
import {
  Text,
  Card,
  Title,
  Button,
  TextInput,
  Surface,
  List,
  Divider,
  ActivityIndicator,
} from 'react-native-paper';
import { SafeAreaView } from 'react-native-safe-area-context';
import { PaymentService } from '../../services/paymentService';

interface Props {
  navigation: any;
  route: any;
}

export function PaymentScreen({ navigation, route }: Props) {
  const { booking } = route.params || {};
  const [paymentMethod, setPaymentMethod] = useState('zelle');
  const [zelleEmail, setZelleEmail] = useState('');
  const [loading, setLoading] = useState(false);

  // Pago M√≥vil states
  const [pagoMovilBank, setPagoMovilBank] = useState('');
  const [pagoMovilPhone, setPagoMovilPhone] = useState('');
  const [pagoMovilCedula, setPagoMovilCedula] = useState('');
  const [pagoMovilReference, setPagoMovilReference] = useState('');

  const handlePayment = async () => {
    if (paymentMethod === 'zelle' && !zelleEmail.trim()) {
      Alert.alert('Error', 'Por favor ingresa tu email de Zelle');
      return;
    }

    if (paymentMethod === 'pago_movil') {
      if (!pagoMovilBank || !pagoMovilPhone || !pagoMovilCedula || !pagoMovilReference) {
        Alert.alert('Error', 'Por favor completa todos los campos de Pago M√≥vil');
        return;
      }
    }

    setLoading(true);
    try {
      let result;

      switch (paymentMethod) {
        case 'zelle':
          result = await PaymentService.processZellePayment({
            bookingId: booking.id,
            amount: booking.totalAmount || booking.totalPrice,
            senderEmail: zelleEmail,
            referenceNumber: `REF${booking.id}`
          });
          break;

        case 'pago_movil':
          result = await PaymentService.processPagoMovilPayment({
            bookingId: booking.id,
            amount: booking.totalAmount || booking.totalPrice,
            bankCode: pagoMovilBank,
            phoneNumber: pagoMovilPhone,
            cedula: pagoMovilCedula,
            referenceNumber: pagoMovilReference
          });
          break;

        case 'cash':
          result = await PaymentService.processCashPayment({
            bookingId: booking.id,
            amount: booking.totalAmount || booking.totalPrice,
            paymentMethod: 'cash'
          });
          break;

        default:
          Alert.alert('Error', 'M√©todo de pago no implementado a√∫n');
          return;
      }

      if (result.success) {
        Alert.alert('¬°√âxito!', result.message, [
          {
            text: 'OK',
            onPress: () => navigation.navigate('BookingDetails', { bookingId: booking.id })
          }
        ]);
      } else {
        Alert.alert('Error', result.message);
      }
    } catch (error) {
      console.error('Payment error:', error);
      Alert.alert('Error', 'No se pudo procesar el pago. Por favor intenta nuevamente.');
    } finally {
      setLoading(false);
    }
  };

  return (
    <SafeAreaView style={styles.container}>
      <ScrollView style={styles.content}>
        <Surface style={styles.header}>
          <Title style={styles.title}>üí≥ Procesar Pago</Title>
        </Surface>

        {/* Booking Summary */}
        {booking && (
          <Card style={styles.section}>
            <Card.Content>
              <Title style={styles.sectionTitle}>Resumen de Reserva</Title>
              <Text style={styles.boatName}>{booking.boatName || 'Embarcaci√≥n'}</Text>
              <Text style={styles.bookingDetail}>üìÖ {booking.startDate}</Text>
              <Text style={styles.bookingDetail}>‚è∞ {booking.startTime} - {booking.endTime}</Text>
              <Text style={styles.bookingDetail}>üë• {booking.guests || booking.guestCount} personas</Text>

              <Divider style={styles.divider} />

              <View style={styles.totalRow}>
                <Text style={styles.totalLabel}>Total a Pagar:</Text>
                <Text style={styles.totalAmount}>${booking.totalPrice || booking.totalAmount}</Text>
              </View>
            </Card.Content>
          </Card>
        )}

        {/* Payment Methods */}
        <Card style={styles.section}>
          <Card.Content>
            <Title style={styles.sectionTitle}>M√©todo de Pago</Title>

            <List.Item
              title="Zelle"
              description="Pago instant√°neo via Zelle"
              left={props => <List.Icon {...props} icon="bank" />}
              right={() => (
                <Button
                  mode={paymentMethod === 'zelle' ? 'contained' : 'outlined'}
                  compact
                  onPress={() => setPaymentMethod('zelle')}
                  disabled={loading}
                >
                  Seleccionar
                </Button>
              )}
            />

            <List.Item
              title="Pago M√≥vil"
              description="Transferencia bancaria venezolana"
              left={props => <List.Icon {...props} icon="cellphone" />}
              right={() => (
                <Button
                  mode={paymentMethod === 'pago_movil' ? 'contained' : 'outlined'}
                  compact
                  onPress={() => setPaymentMethod('pago_movil')}
                  disabled={loading}
                >
                  Seleccionar
                </Button>
              )}
            />

            <List.Item
              title="Efectivo"
              description="Pagar al momento del abordaje"
              left={props => <List.Icon {...props} icon="cash" />}
              right={() => (
                <Button
                  mode={paymentMethod === 'cash' ? 'contained' : 'outlined'}
                  compact
                  onPress={() => setPaymentMethod('cash')}
                  disabled={loading}
                >
                  Seleccionar
                </Button>
              )}
            />
          </Card.Content>
        </Card>

        {/* Payment Method Details */}
        {paymentMethod === 'zelle' && (
          <Card style={styles.section}>
            <Card.Content>
              <Title style={styles.sectionTitle}>Datos para Zelle</Title>
              <Text style={styles.zelleInfo}>
                Env√≠a el pago a: payments@boatrentals.ve
              </Text>

              <TextInput
                label="Tu email de Zelle"
                value={zelleEmail}
                onChangeText={setZelleEmail}
                mode="outlined"
                keyboardType="email-address"
                autoCapitalize="none"
                style={styles.input}
                disabled={loading}
              />

              <Text style={styles.instructions}>
                ‚Ä¢ Realiza el pago desde tu app de Zelle{'\n'}
                ‚Ä¢ Usa como referencia: {booking?.id ? `REF${booking.id}` : 'REF123'}{'\n'}
                ‚Ä¢ Confirma el pago presionando "Confirmar Pago"
              </Text>
            </Card.Content>
          </Card>
        )}

        {paymentMethod === 'pago_movil' && (
          <Card style={styles.section}>
            <Card.Content>
              <Title style={styles.sectionTitle}>Datos para Pago M√≥vil</Title>

              <View style={styles.pagoMovilInfo}>
                <Text style={styles.pagoMovilLabel}>Banco:</Text>
                <Text style={styles.pagoMovilValue}>Banco de Venezuela (0102)</Text>
              </View>

              <View style={styles.pagoMovilInfo}>
                <Text style={styles.pagoMovilLabel}>Tel√©fono:</Text>
                <Text style={styles.pagoMovilValue}>0414-1234567</Text>
              </View>

              <View style={styles.pagoMovilInfo}>
                <Text style={styles.pagoMovilLabel}>C√©dula:</Text>
                <Text style={styles.pagoMovilValue}>V-12345678</Text>
              </View>

              <Divider style={styles.divider} />

              <TextInput
                label="C√≥digo de tu banco"
                value={pagoMovilBank}
                onChangeText={setPagoMovilBank}
                mode="outlined"
                keyboardType="numeric"
                maxLength={4}
                style={styles.input}
                disabled={loading}
              />

              <TextInput
                label="Tu n√∫mero de tel√©fono"
                value={pagoMovilPhone}
                onChangeText={setPagoMovilPhone}
                mode="outlined"
                keyboardType="phone-pad"
                style={styles.input}
                disabled={loading}
              />

              <TextInput
                label="Tu c√©dula"
                value={pagoMovilCedula}
                onChangeText={setPagoMovilCedula}
                mode="outlined"
                style={styles.input}
                disabled={loading}
              />

              <TextInput
                label="N√∫mero de referencia"
                value={pagoMovilReference}
                onChangeText={setPagoMovilReference}
                mode="outlined"
                keyboardType="numeric"
                style={styles.input}
                disabled={loading}
              />

              <Text style={styles.instructions}>
                ‚Ä¢ Realiza la transferencia desde tu banco{'\n'}
                ‚Ä¢ Ingresa los datos de tu operaci√≥n{'\n'}
                ‚Ä¢ Guarda el comprobante
              </Text>
            </Card.Content>
          </Card>
        )}

        {paymentMethod === 'cash' && (
          <Card style={styles.section}>
            <Card.Content>
              <Title style={styles.sectionTitle}>Pago en Efectivo</Title>
              <Text style={styles.cashInfo}>
                üíµ Pagar√°s al momento del abordaje
              </Text>
              <Text style={styles.instructions}>
                ‚Ä¢ Presenta el monto exacto en efectivo{'\n'}
                ‚Ä¢ Recibir√°s un recibo al momento del pago{'\n'}
                ‚Ä¢ Tu reserva quedar√° confirmada provisionalmente
              </Text>
            </Card.Content>
          </Card>
        )}

        {/* Actions */}
        <View style={styles.actions}>
          <Button
            mode="outlined"
            onPress={() => navigation.goBack()}
            style={styles.cancelButton}
            disabled={loading}
          >
            Cancelar
          </Button>

          <Button
            mode="contained"
            onPress={handlePayment}
            style={styles.payButton}
            loading={loading}
            disabled={loading || (paymentMethod === 'zelle' && !zelleEmail.trim())}
          >
            {loading ? 'Procesando...' : 'Confirmar Pago'}
          </Button>
        </View>
      </ScrollView>
    </SafeAreaView>
  );
}

const styles = StyleSheet.create({
  container: {
    flex: 1,
    backgroundColor: '#f8f9fa',
  },
  content: {
    flex: 1,
  },
  header: {
    padding: 20,
    paddingTop: 10,
    elevation: 4,
    backgroundColor: 'white',
  },
  title: {
    textAlign: 'center',
    fontSize: 24,
    fontWeight: 'bold',
  },
  section: {
    margin: 16,
    elevation: 2,
  },
  sectionTitle: {
    fontSize: 18,
    fontWeight: 'bold',
    marginBottom: 12,
  },
  boatName: {
    fontSize: 16,
    fontWeight: 'bold',
    color: '#0066CC',
    marginBottom: 8,
  },
  bookingDetail: {
    fontSize: 14,
    color: '#666',
    marginBottom: 4,
  },
  divider: {
    marginVertical: 12,
  },
  totalRow: {
    flexDirection: 'row',
    justifyContent: 'space-between',
    alignItems: 'center',
  },
  totalLabel: {
    fontSize: 18,
    fontWeight: 'bold',
  },
  totalAmount: {
    fontSize: 20,
    fontWeight: 'bold',
    color: '#0066CC',
  },
  zelleInfo: {
    fontSize: 16,
    fontWeight: 'bold',
    color: '#2E7D32',
    textAlign: 'center',
    marginBottom: 16,
    padding: 12,
    backgroundColor: '#E8F5E8',
    borderRadius: 8,
  },
  pagoMovilInfo: {
    flexDirection: 'row',
    justifyContent: 'space-between',
    marginBottom: 8,
    paddingHorizontal: 12,
    paddingVertical: 8,
    backgroundColor: '#F5F5F5',
    borderRadius: 8,
  },
  pagoMovilLabel: {
    fontSize: 14,
    color: '#666',
    fontWeight: 'bold',
  },
  pagoMovilValue: {
    fontSize: 14,
    color: '#000',
  },
  cashInfo: {
    fontSize: 16,
    fontWeight: 'bold',
    color: '#FF6B00',
    textAlign: 'center',
    marginBottom: 16,
    padding: 12,
    backgroundColor: '#FFF3E0',
    borderRadius: 8,
  },
  input: {
    marginBottom: 16,
  },
  instructions: {
    fontSize: 14,
    color: '#666',
    lineHeight: 20,
  },
  actions: {
    flexDirection: 'row',
    padding: 20,
    gap: 12,
  },
  cancelButton: {
    flex: 1,
  },
  payButton: {
    flex: 2,
  },
});